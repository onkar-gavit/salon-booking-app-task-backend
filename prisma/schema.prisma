generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
  output   = "../libs/generated/client"      // because we are using laetest ORM version there's output should be use for client generate
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  firebaseUid  String   @unique
  email        String   @unique
  name         String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Customer {
  id          String   @id @default(uuid())
  businessId  String   // Business identifier from JWT token
  phone       String
  name        String
  email       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([businessId, phone], name: "unique_phone_per_business")
}
